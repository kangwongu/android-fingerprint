<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_below="@+id/toolbar"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textSize="25dp"
                android:text="메인화면"
                >
            </TextView>

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <TextView
        android:id="@+id/TextView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finger Printing"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="70dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_fingerprint"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:id="@+id/RelativeLayout_systemsettings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_deeogray"
        android:clickable="true"
        android:layout_marginTop="70dp"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:id="@+id/ImageView_systemsettings"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_setting"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시스템 설정"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_userinfomation"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_deeogray"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_userinfo"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 정보 관리"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>


</LinearLayout>