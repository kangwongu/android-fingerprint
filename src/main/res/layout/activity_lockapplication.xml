<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <TextView
        android:id="@+id/TextView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finger Printing"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="70dp"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_fingerprint"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_deeogray"
        android:clickable="true"
        android:layout_marginTop="70dp"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:id="@+id/ImageView_lockapplication"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_lockapplication"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="잠금어플 설정"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_deeogray"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        >

        <ImageView
            android:id="@+id/ImageView_systemsettings"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fingerprint"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지문입력 방식 설정"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="40dp"

            />
    </RelativeLayout>

</LinearLayout>